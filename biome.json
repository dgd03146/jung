{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"files": {
		"includes": ["**/*.ts", "**/*.js", "**/*.tsx", "!**/node_modules", "!**/.next"]
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noEmptyInterface": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"useKeyWithClickEvents": "off",
				"useKeyWithMouseEvents": "off"
			},
			"correctness": {
				"noUnusedImports": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 150
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"lineWidth": 80,
			"lineEnding": "crlf",
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "always",
			"jsxQuoteStyle": "single"
		}
	},
	"overrides": [
		{
			"includes": ["packages/design-system/**"],
			"linter": {
				"rules": {
					"suspicious": {
						"noArrayIndexKey": "off"
					},
					"correctness": {
						"useExhaustiveDependencies": "off"
					}
				}
			}
		},
		{
			"includes": ["apps/admin/src/routeTree.gen.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["apps/web/src/shared/ui/JsonLd.tsx"],
			"linter": {
				"rules": {
					"security": {
						"noDangerouslySetInnerHtml": "off"
					}
				}
			}
		}
	]
}
