{
  "name": "jung",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "turbo format",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "test:watch": "turbo test:watch",
    "prepare": "husky",
    "web": "pnpm --filter web",
    "admin": "pnpm --filter admin",
    "api": "pnpm --filter api",
    "workshop": "pnpm --filter workshop",
    "build-storybook": "turbo run build-storybook --filter=workshop",
    "chromatic": "turbo run chromatic --filter=workshop"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched",
      "biome check --apply --organize-imports-enabled=false --no-errors-on-unmatched",
      "biome check --apply-unsafe --no-errors-on-unmatched",
      "biome format --write --no-errors-on-unmatched",
      "biome lint --apply --no-errors-on-unmatched"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.1",
    "@jung/configs": "workspace:*",
    "@jung/typescript-config": "workspace:*",
    "@playwright/test": "^1.44.1",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "vitest": "^1.6.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
