{
  "extends": "@jung/typescript-config/base.json",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "jest"],
    "module": "ESNext",
    "moduleResolution": "Bundler"
  },
  "include": ["**/*.ts", "**/*.tsx", "lib/trpc.ts"],
  "exclude": ["node_modules", "dist"]
}
